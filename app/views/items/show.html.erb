<h1> Item Show </h1>

<h3><%= link_to "Update #{@item.name}", edit_merchant_item_path(@merchant, @item) %></h3>
<p>Name: <%= @item.name %></p>
<p>Description: <%= @item.description %></p>
<p>Price: $<%= @item.unit_price %></p>
<p>Enabled?: <%= @item.enabled %></p>


<% if @item.enabled == "enabled" %>
  <p><%= button_to "Disable #{@item.name}", merchant_item_path(@merchant, @item), method: :patch, params: {:enabled => "disabled"} %></p>
<% else %>
  <p><%= button_to "Enable #{@item.name}", merchant_item_path(@merchant, @item), method: :patch, params: {:enabled => "enabled"} %></p>
<% end %>
